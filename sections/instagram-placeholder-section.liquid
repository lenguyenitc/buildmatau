{% schema %}
{
  "name": "Instagram Placeholder",
  "settings": [
    {
      "type": "text",
      "id": "label",
      "label": "Label",
      "info": "Enter label",
      "default": "Explore Categories"
    },
    {
      "type": "text",
      "id": "instagram_name",
      "label": "Instagram Name",
      "info": "Instagram name"
    },
    {
      "type": "text",
      "id": "instagram_url",
      "label": "Instagram Url",
      "info": "Enter your Instagram Url"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#FFF",
      "info": "Select background color"
    }
  ],
  "blocks": [
    {
      "type": "ins-image-item",
      "name": "Image Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Select Image"
        },
        {
          "type": "text",
          "id": "url",
          "label": "Url"
        }
      ]
    }
  ]
}
{% endschema %}