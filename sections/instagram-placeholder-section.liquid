{% style %}
.instagram-placeholder-section-{{ section.id }} {
  background-color: {{ section.settings.background_color }};
  padding: 80px 0 50px 0;
}

.instagram-placeholder-section-{{ section.id }} .instagram-placeholder-section__heading {
  display: flex;
  align-items: center;
  margin-bottom: 25px;
}

.instagram-placeholder-section-{{ section.id }} .instagram-placeholder-section__heading h4,
.instagram-placeholder-section-{{ section.id }} .instagram-placeholder-section__heading a {
  font-family: 'Open Sans';
  font-style: normal;
  font-weight: 400;
  font-size: 20px;
  line-height: 24px;
  text-transform: uppercase;
  white-space: nowrap;
  margin: 0 16px 0 0;
}

.instagram-placeholder-section-{{ section.id }} .instagram-placeholder-section__heading h4 {
  letter-spacing: 2px;
  color: #333;
}

.instagram-placeholder-section-{{ section.id }} .instagram-placeholder-section__heading a {
  font-weight: bold !important;
  color: #03555F;
  display: flex;
  align-items: center;
  text-transform: initial;
}

.instagram-placeholder-section-{{ section.id }} .instagram-placeholder-section__heading a svg {
  margin-right: 8px;
}

.instagram-placeholder-section-{{ section.id }} .instagram-placeholder-section__heading .heading-line {
  width: 100%;
  border-bottom: 1px solid #CADFDC;
}

.instagram-placeholder-section-{{ section.id }} .instagram-placeholder-section__gallery {
  display: flex;
  flex-wrap: wrap;
  margin: 0 -4px;
}

.instagram-placeholder-section-{{ section.id }} .instagram-placeholder-item {
  padding: 0 4px;
  margin-bottom: 8px;
  box-sizing: border-box;
  width: calc(100% / 6);
}
@media(max-width: 768px) {
  .instagram-placeholder-section-{{ section.id }} .instagram-placeholder-section__heading {
    flex-direction: column;
    justify-content: center;
    text-align: center;
    line-height: 1.5em;
  }
  .instagram-placeholder-section-{{ section.id }} .instagram-placeholder-section__heading .heading-line {
    margin-top:12px;
  }
  .instagram-placeholder-section-{{ section.id }} .instagram-placeholder-item {
    width: calc(100% / 4);
  }
  .instagram-placeholder-section-{{ section.id }} .instagram-placeholder-section__heading h4 {
    white-space: break-spaces;
    margin:0 0 5px 0;
    line-height:28px;
  }

}
@media(max-width:600px) {
  .instagram-placeholder-section-{{ section.id }} .instagram-placeholder-item {
    width: calc(100% / 3);
  }
  .instagram-placeholder-section-{{ section.id }} {
    padding: 32px 0 25px 0;
  }
}

{% endstyle %}

